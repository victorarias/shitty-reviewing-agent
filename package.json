{
  "name": "shitty-reviewing-agent",
  "version": "0.2.2",
  "private": true,
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "smoke": "node scripts/smoke.mjs",
    "start": "bun src/index.ts",
    "postinstall": "patch-package",
    "test": "bun test",
    "test:llm": "RUN_LLM_SNAPSHOTS=1 bun test tests/llm-snapshots.test.ts",
    "record:llm": "RUN_LLM_SNAPSHOTS=1 bun scripts/record-llm.ts",
    "test:harness": "bun test tests/flow*.test.ts tests/*prompt*.test.ts tests/summary-posts.test.ts tests/skip-summary.test.ts tests/run-review-*.test.ts tests/app-pr-data.test.ts tests/config.test.ts",
    "validate:reviewerc": "bun scripts/validate-reviewerc.mjs"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^7.0.0",
    "@google/genai": "^1.15.0",
    "@mariozechner/pi-agent-core": "^0.45.7",
    "@mariozechner/pi-ai": "^0.45.7",
    "@octokit/auth-app": "^7.0.0",
    "@sinclair/typebox": "^0.34.0",
    "ajv": "^8.17.1",
    "fast-glob": "^3.3.3",
    "minimatch": "^10.0.1",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@octokit/types": "^16.0.0",
    "@types/node": "^24.3.0",
    "patch-package": "^8.0.1",
    "typescript": "^5.7.3"
  }
}
